<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title> Niloket - {% block title %}Pagina Inicial{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/pylife/css/jquery-ui.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/pylife/css/jquery-ui.structure.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/pylife/css/bootstrap.min.css')}}" >
            <link rel="stylesheet" href="{{ asset('bundles/pylife/css/datepicker3.css')}}" >
            <link rel="stylesheet" href="{{ asset('bundles/pylife/css/styles.css')}}" >
            <script src="{{ asset('bundles/pylife/js/lumino.glyphs.js')}}"></script>
            
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <!--<a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>-->
            {% endif %}
        </div>

        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        <script src="{{ asset('bundles/pylife/js/jquery-3.1.1.slim.min.js') }}"></script>
        <script src="{{ asset('bundles/pylife/js/jquery-ui.min.js')}}"></script>
        <script src="{{ asset('bundles/pylife/js/bootstrap.min.js')}}"></script>
        <script src="{{ asset('bundles/pylife/js/chart.min.js')}}"></script>
        <script src="{{ asset('bundles/pylife/js/chart-data.js')}}"></script>
        <script src="{{ asset('bundles/pylife/js/easypiechart.js')}}"></script>
        <script src="{{ asset('bundles/pylife/js/easypiechart-data.js')}}"></script>
        <script src="{{ asset('bundles/pylife/js/bootstrap-datepicker.js')}}"></script>
    </body>
</html>
